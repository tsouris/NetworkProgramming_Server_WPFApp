<Window x:Class="NetworkProgramming_Server_WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgramming_Server_WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="Server" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" Margin="0 5 0 0"/>
        <Button Content="Start"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="0 0 200 0" Click="btnStart_Click"/>
        <Button Content="Stop"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="200 0 0 0" Click="btnStop_Click"/>
        <TextBox Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
    </Grid>
</Window>
